<%= form_for @blog_post do |f| %>
<%if f.object.errors.any?%>
    <div>
        <% f.object.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>
<%end%>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.label :published_at %><br>
        <%= f.datetime_select :published_at, include_blank: true %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
