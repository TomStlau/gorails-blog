<div class="">
    <div class="flex flex-col items-center">
        <h1 class="m-20">My Blog</h1>


            <% @blog_posts.each do |post| %>
                <div class="flex flex-col items-center border-t w-full last-of-type:mb-20">
                <% if post.draft? %>
                    <h2 class="text-red-700 p-2 bg-slate-200 w-1/4 text-center ">Draft</h2>
                <% elsif post.scheduled? %>
                    <h2 class="text-red-700">Scheduled</h2>
                <% end %>
                    <h2 > <%= link_to post.title, post, class:"text-red-700"%> </h2>
                    <p><%= truncate(post.body, length: 220) %></p>
                </div>
            <% end %>

        <% if user_signed_in? %>

            <%= link_to "New Post", new_blog_post_path %>

        <% end %>
    </div>
</div>
